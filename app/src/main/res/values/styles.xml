    <style name="Theme.Sudoku" parent="OneUITheme">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorAccent">@color/secondary_color</item>
    </style>

    <style name="ButtonStyle.Colored" parent="OneUI.ButtonStyleColored">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/oui_round_and_bgcolor</item>
        <item name="iconTint">@color/oui_round_and_bgcolor</item>
        <item name="tint">@color/oui_round_and_bgcolor</item>
    </style>

    <style name="ButtonStyle.Transparent" parent="OneUI.ButtonStyleTransparent">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="iconTint">@color/primary_color</item>
        <item name="tint">@color/primary_color</item>
    </style>

    <style name="ButtonStyle.Filled" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">?colorControlHighlight</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="iconTint">@color/oui_primary_text_color</item>
        <item name="tint">@color/oui_primary_icon_color</item>
    </style>

    <style name="ButtonStyle.SudokuButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/oui_primary_text_color</item>
        <item name="iconTint">@color/oui_primary_text_color</item>
        <item name="tint">@color/oui_primary_icon_color</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonStyle.NumberButton" parent="ButtonStyle.SudokuButton">
        <item name="android:padding">0dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:ellipsize">none</item>
    </style>

</resources>