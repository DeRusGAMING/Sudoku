<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
    TODO / Ideas

        play integration (achievements, leaderboards, etc.)

        show numbers left on button
        daily nofitication
        multiplayer

        (splash icon on non sammy devices squarish?) check splash icon on non sammy

        size 16?
        landscape mode?

        (new Android 12 Splashscreen)
    -->

    <application
        android:name=".App"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sudoku"
        tools:targetApi="33">

        <!-- SamsungBasicInteraction -->
        <meta-data
            android:name="SamsungBasicInteraction"
            android:value="SEP10" />
        <!-- Samsung Icon flags -->
        <meta-data
            android:name="com.samsung.android.icon_container.has_icon_container"
            android:value="true" />
        <meta-data
            android:name="com.samsung.android.icon_container.feature_appicon"
            android:value="ADAPTIVEICON_SHADOW" />

        <activity android:name=".ui.SettingsActivity" />
        <activity android:name=".ui.AboutActivity" />
        <activity android:name=".ui.AboutMeActivity" />
        <activity android:name=".ui.DailySudokuActivity" />
        <activity android:name=".ui.SudokuLevelActivity" />
        <activity
            android:name=".ui.SudokuActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.OOBEActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:noHistory="true">
            <!--Launcher-->
            <meta-data
                android:name="com.sec.android.app.launcher.icon_theme"
                android:value="themeColor" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--Shortcuts-->
            <!--meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" /-->
        </activity>
    </application>

</manifest>